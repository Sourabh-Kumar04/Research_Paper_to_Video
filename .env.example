# RASO Platform Configuration

# Environment
RASO_ENV=development
RASO_LOG_LEVEL=INFO
RASO_DEBUG=true

# API Configuration
RASO_API_HOST=0.0.0.0
RASO_API_PORT=8000
RASO_API_WORKERS=1

# Database Configuration
RASO_DATABASE_URL=redis://localhost:6379/0
RASO_REDIS_PASSWORD=

# Storage Configuration
RASO_DATA_PATH=./data
RASO_TEMP_PATH=./temp
RASO_LOG_PATH=./logs
RASO_MAX_STORAGE_GB=50

# LLM Configuration
RASO_LLM_PROVIDER=ollama
RASO_OLLAMA_URL=http://localhost:11434
RASO_OLLAMA_MODEL=deepseek-coder:6.7b

# Optional: OpenAI Configuration
RASO_OPENAI_API_KEY=
RASO_OPENAI_MODEL=gpt-4-turbo-preview

# Optional: Anthropic Configuration  
RASO_ANTHROPIC_API_KEY=
RASO_ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Optional: Google Configuration
RASO_GOOGLE_API_KEY=
RASO_GOOGLE_MODEL=gemini-pro

# Animation Configuration
RASO_ANIMATION_RESOLUTION=1920x1080
RASO_ANIMATION_FPS=30
RASO_ANIMATION_QUALITY=high
RASO_MANIM_QUALITY=production_quality

# Audio Configuration
RASO_TTS_PROVIDER=coqui
RASO_TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
RASO_AUDIO_SAMPLE_RATE=22050
RASO_AUDIO_BITRATE=128k

# Video Configuration
RASO_VIDEO_CODEC=libx264
RASO_VIDEO_BITRATE=5000k
RASO_VIDEO_PRESET=medium

# YouTube Configuration (Optional)
RASO_YOUTUBE_CLIENT_ID=
RASO_YOUTUBE_CLIENT_SECRET=
RASO_YOUTUBE_REFRESH_TOKEN=
RASO_YOUTUBE_DEFAULT_CATEGORY=Education
RASO_YOUTUBE_DEFAULT_PRIVACY=unlisted

# System Configuration
RASO_MAX_CONCURRENT_JOBS=2
RASO_JOB_TIMEOUT_MINUTES=60
RASO_RETRY_ATTEMPTS=3
RASO_RETRY_DELAY_SECONDS=5

# Security Configuration
RASO_SECRET_KEY=your-secret-key-here
RASO_CORS_ORIGINS=http://localhost:3000,http://localhost:8000
RASO_RATE_LIMIT_PER_MINUTE=60

# Monitoring Configuration
RASO_ENABLE_METRICS=true
RASO_METRICS_PORT=9090
RASO_HEALTH_CHECK_INTERVAL=30